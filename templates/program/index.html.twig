{% extends 'base.html.twig' %}

{% block title %}

   Wild Series

{% endblock %}

{% block body %}

   <h1>Series List</h1>
   {% for program in programs %}
       <div class="container">
            <div class="card" style="width: 18rem;">
                <img src="{{ asset('build/images/' ~ program.poster) }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ program.title }}</h5>
                    <p class="card-text">{{ program.synopsis }}</p>
                    <a href="/program/{{ program.id }}" class="btn btn-primary">Read more</a>
                </div>
            </div>
        </div>
   {% endfor %}

{% endblock %}